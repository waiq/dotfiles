[user]
  name = "{{ custom.git.name }}"
  email = "{{ custom.git.email }}"

[alias]
  co = checkout
  br = branch
  ci = commit
  st = status

[core]
  excludesFile = "{{ home }}/.gitignore"

[diff]
  tool = meld

[difftool]
  prompt = false

[difftool "meld"]
  cmd = meld "$LOCAL" "$REMOTE"

[pull]
	rebase = false

[url "git@github.com:"]
	insteadOf = https://github.com/
