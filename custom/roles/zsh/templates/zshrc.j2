export ZSH="$HOME/.oh-my-zsh"

ZSH_THEME="robbyrussell"

plugins=(
  zsh-256color
  git
  direnv
  docker
  zsh-autosuggestions
  zsh-vi-mode
)

source $ZSH/oh-my-zsh.sh

# my dotfiles stuff
autoload bashcompinit
bashcompinit

# load my dotfiles ecosystem
source "{{ core.files.init }}"

eval "$(oh-my-posh init zsh --config {{ core.dirs.local }}/omp/themes/catppuccin_macchiato.omp.json)"
eval "$(zoxide init zsh --cmd cd)"
