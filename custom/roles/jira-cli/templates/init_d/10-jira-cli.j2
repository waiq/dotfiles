export JIRA_API_TOKEN="{{ custom.atlassian.jira.environment.JIRA_API_KEY }}"

jira() {
  op run --account "$ONE_PASSWORD_ACCOUNT" -- jira "$@"
}
compdef _jira jira

jimy-issues() {
  op run --account "$ONE_PASSWORD_ACCOUNT" -- jira issues list -a$(jira me) --order-by created "$@"
}
compdef _jira jimy-issues

jimy-epics() {
  op run --account "$ONE_PASSWORD_ACCOUNT" -- jira epics list --order-by created "$@"
}
compdef _jira jimy-epics

jiw() {
  op run --account "$ONE_PASSWORD_ACCOUNT" -- jira issues view "$@"
}
compdef _jira jiw

jil() {
  op run --account "$ONE_PASSWORD_ACCOUNT" -- jira issues list "$@"
}
compdef _jira jil

jimo() {
  op run --account "$ONE_PASSWORD_ACCOUNT" -- jira issues move "$@"
}
compdef _jira jimo
